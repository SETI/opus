<script>

$(document).ready(function() {
    $('[data-toggle="tooltip"]').tooltip();

    $('.SessionLink').click(function() {
        $('.SessionLinkSelected').removeClass('SessionLinkSelected');
        $(this).addClass('SessionLinkSelected');

        var target = $(this).attr('data-target');
        $('.SessionInfo').hide();
        $(target).show()
        $('#right').scrollTop(0)

        return false;
    })
});
</script>
